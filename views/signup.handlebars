<div id="sign-up-container">
  <div id="sign-up-header"><h3>Sign up</h3></div>
  <div id="sign-up-form">
    <form>
      <div class="form-group">
        <label for="email-sign-up">Email</label>
        <br />
        <input type="email" id="email-sign-up" />
      </div>

      <div class="form-group">
        <label for="password-sign-up">Password</label>
        <br />
        <input type="password" id="password-sign-up" />
      </div>

      <div class="form-group">
        <button id="sign-up-form-btn">Sign up!</button>
      </div>

      <div>
        <button id="login">Login instead</button>
      </div>
    </form>
  </div>
</div>