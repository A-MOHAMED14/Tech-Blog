<div id="new-post-container">

  {{#if new_post}}

    <div id="new-post-header"><h3>Create New Post</h3></div>

    <div id="new-user-post">
      <form class="new-post-form">
        <div class="form-group">
          <label for="new-blog-title">Title</label>
          <br />
          <input type="text" id="new-blog-title" />
        </div>

        <div class="form-group">
          <label for="new-blog-content">Content</label>
          <br />
          <textarea id="new-blog-content" rows="5" cols="50"></textarea>
        </div>

        <div class="form-group">
          <button id="submit-post-btn" type="submit">Create</button>
        </div>
      </form>
    </div>

    <button id="new-post-btn">+ New Post</button>

  {{else if blogs}}

    <div id="posted-blogs-container">
      {{#each blogs as |blog|}}
        <div class="posted-blogs-div" data-id="{{blog.id}}">
          <div class="posted-blogs-container">
            <div class="posted-blog">
              <p class="title-blog"> {{blog.blog_title}}</p>
              <p class="date-blog"> {{format_date blog.date_created}} </p>
            </div>
          </div>
        </div>
      {{/each}}
    </div>

  {{else if edit_post}}
    <div id="edit-post-container">
      <div id="edit-post-header"><h3>Edit Post</h3></div>
      <div id="edit-user-post">
        <form class="edit-post-form">
          <div class="form-group">
            <label for="edit-blog-title">Title</label>
            <input
              type="text"
              id="edit-blog-title"
              value="{{blog.blog_title}}"
            />
          </div>

          <div class="form-group">
            <label for="edit-blog-content">Content</label>
            <textarea
              id="edit-blog-content"
              rows="5"
              cols="50"
            >{{blog.content}}</textarea>
          </div>

          <div class="form-group">
            <button id="update-blog-btn" type="submit">Update Post</button>
          </div>
        </form>
        <div class="form-group">
          <button id="delete-blog-btn">Delete</button>
        </div>

      </div>
    </div>

  {{else}}

    <button id="new-post-btn">+ New Post</button>

  {{/if}}

</div>

<script src="/js/newBlog.js"></script>
<script src="/js/editForm.js"></script>
<script src="/js/updateBlog.js"></script>